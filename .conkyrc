	update_interval = 0.5,
	total_run_times = 0,
	double_buffer = true,
	minimum_width = 300,
        minimum_height = 100,
	maximum_width = 500,
	text_buffer_size = 1024,

	draw_shades = true,
	draw_outline = false,
	draw_borders = false,
	draw_graph_borders = true,
	default_color = 'white',
	default_shade_color = 'black',
	default_outline_color = 'white',
