# change focus
cmd - h : yabai -m window --focus west || yabai -m display --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east || yabai -m display --focus east
# change focus (using arrow keys)
cmd - left  : yabai -m window --focus west || yabai -m display --focus west
cmd - down  : yabai -m window --focus south
cmd - up    : yabai -m window --focus north
cmd - right : yabai -m window --focus east || yabai -m display --focus east

# change desktop (using arrow keys)
cmd + ctrl - left : yabai -m window --display west; yabai -m display --focus west
cmd + ctrl - down : yabai -m window --focus stack.next || yabai -m window --focus stack.first
cmd + ctrl - up : yabai -m window --focus stack.prev || yabai -m window --focus stack.last
cmd + ctrl - right : yabai -m window --display east; yabai -m display --focus east

# shift window in current workspace
cmd + shift - j : yabai -m window --swap south   
cmd + shift - k : yabai -m window --swap north  
cmd + shift - h : yabai -m window --swap west || move_left  
cmd + shift - l : yabai -m window --swap east || move_right 
# alternatively, use the arrow keys
cmd + shift - down : yabai -m window --swap south   
cmd + shift - up : yabai -m window --swap north  
cmd + shift - left : yabai -m window --swap west || move_left  
cmd + shift - right : yabai -m window --swap east || move_right 

# set insertion point in focused container
cmd + ctrl - j : yabai -m window --insert south
cmd + ctrl - k : yabai -m window --insert north
cmd + ctrl - h : yabai -m window --insert west
cmd + ctrl - l : yabai -m window --insert east
# (alt) set insertion point in focused container using arrows
# alt + ctrl - left  : yabai -m window --insert west
# alt + ctrl - down  : yabai -m window --insert south
# alt + ctrl - up    : yabai -m window --insert north
# alt + ctrl - right : yabai -m window --insert east

# go back to previous workspace (kind of like back_and_forth in i3)
cmd - b : yabai -m space --focus recent

# move focused window to previous workspace
cmd + shift - b : yabai -m window --space recent; \
                  yabai -m space --focus recent

# move focused window to next/prev workspace
cmd + shift - 1 : yabai -m window --space 1
cmd + shift - 2 : yabai -m window --space 2
cmd + shift - 3 : yabai -m window --space 3
cmd + shift - 4 : yabai -m window --space 4
cmd + shift - 5 : yabai -m window --space 5
cmd + shift - 6 : yabai -m window --space 6
cmd + shift - 7 : yabai -m window --space 7
cmd + shift - 8 : yabai -m window --space 8
cmd + shift - 9 : yabai -m window --space 9
#alt + shift - 0 : yabai -m window --space 10


# # mirror tree y-axis
cmd + shift - y : yabai -m space --mirror y-axis

# # mirror tree x-axis
cmd + shift - x : yabai -m space --mirror x-axis

# balance size of windows
cmd + shift - 0 : yabai -m space --balance

# # mirror tree y-axis
cmd + shift - y : yabai -m space --mirror y-axis

# # mirror tree x-axis
cmd + shift - x : yabai -m space --mirror x-axis

# balance size of windows
cmd + shift - 0 : yabai -m space --balance

# change layout of desktop
cmd - e : yabai -m space --layout bsp
cmd - f : yabai -m space --layout float
cmd - s : yabai -m space --layout stack
cmd - t : yabai -m window --toggle split
cmd + shift - f : yabai -m window --togle float

