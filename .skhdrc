# close focused window
#
cmd + shift - q : yabai -m window --close

# enter fullscreen mode for the focused container
cmd - f : yabai -m window --toggle zoom-fullscreen

# toggle window native fullscreen
cmd + shift - f : yabai -m window --toggle native-fullscreen

# open terminal
cmd - return : open -n /Applications/iTerm.app
cmd + shift - return : open -a "Google Chrome" -n
cmd + shift - s : open -a "Sublime Text" -n
cmd + shift - o : open -a "Microsoft Outlook.app" -n
